<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || "Admin" %></title>
    
    <%= stylesheet_link_tag('application', :media => 'all') %>

  </head>
  <body>
    <div id="header">
      <h1>Bogdan's CMS </h1>
    </div>
    <div id="main">
      <!-- Adds a message to display when a subjet is created.(See subject controller) -->
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Bogdan Plesa</p>
    </div>
  </body>
</html>
